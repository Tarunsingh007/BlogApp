<form action="/logout" method="get"><button type="submit" class="btn btn-default">Logout</button></form>
<div class="container">
	<nav>
		<ul>
			<li><a href="/blog/showall">home</a></li>
			<li><a href="/posts/add">Add Post</a></li>
			<li><a href="/categories/add">Add Category</a></li>
		</ul>
	</nav>
<!DOCTYPE html>
<html>
<head>
	<link rel='stylesheet', href='/stylesheets/style.css'>

</head>
<body>	
 <script type="text/javascript" src="/ckeditor/ckeditor.js"></script>
	<h1 id="title">{{title}}</h1>
	<form method="post",action="/posts/add" enctype="multipart/form-data">
		<label>Title:</label>
		<input type="text" name="title" /></br>

		<label>Category:</label>
		<select name="category">
			{{#each categories}}
          <option>
          				{{this.data}}
      	  </option>
      	  {{/each}}
		</select></br>
		
		<label>Body:</label>
		<textarea name="body" id="body"></textarea>
 		<script type="text/javascript">
            CKEDITOR.replace( 'body' );
         </script>
	</br>
		
		<label>Image:</label>
		<input type="file" name="mainimage" /></br>
		
		<label>Author:</label>
		<input type="text" name="author" /></br>
		
		<button name="submit" class="submit"> save </button>		
	</form>
	
</body>
</html>
</div>