
{{> header}}
<div class="container">
    <div class="row">
        <div class="col-md-9">
            <center><h1>Blog of {{blog.author.username}}</h1></center>
            <div class="img-thumbnail card">
               <!--  <img class="image-responsive rounded" src="{{blog.image}}"> -->
                <div class="card-block">
                    <a class="card-title" href="#"><h4>{{blog.name}}</h4></a>
                    <h4 class="card-title d-flex justify-content-end"><b>Price: </b>$ {{blog.price}}</h4>
                    <div class="card-text">
                        <p>{{blog.description}}</p> 
                        <b><p>Submitted by : {{blog.author.username}}</p></b>
                    </div>
                </div>
            </div><hr>
            <div class="row">
              <div class="col-sm">
                 <form class="deleteForm" action="/blogs/{{blog.id}}/edit" method="get" >
                            <button class="btn btn-sm">Edit</button>
                 </form>
              </div>
              <div class="col-sm">
                  <form class="deleteForm" action="/blogs/{{blog.id}}?_method=delete" method="post" >
                              <button class="btn btn-sm">Delete</button>
                  </form>
              </div>
            </div>
        </div>
    </div>
</div>
